<div>
	<h3 class="text-lg font-bold" >Reset Password</h3>



		<%= form_with model: Current.user, url: edit_password_path, data: { turbo: false } do |form| %>

		<% if form.object.errors.any? %>
				<div class= "bg-red-500 text-white py-3 px-4 rounded-sm mb-4 gap-2" >
				<%  form.object.errors.full_messages.each do |e| %>
					<p><%= e %><p>
				<% end %>
				</div>
		<% end %>
		<div class="mt-4 space-y-6">
			<div>
			<%= form.label :password %>
			<%= form.password_field :password, class: "input-field", placeholder: "Enter password" %>
			</div>
			<div>
			<%= form.label :password_confirmation %>
			<%= form.password_field :password_confirmation, class: "input-field", placeholder: "Re-enter password" %>
			</div>
			 
			 <%= form.submit  "Reset Password" , class: "btn-primary" %>
		</div>
		<% end %>
</div>