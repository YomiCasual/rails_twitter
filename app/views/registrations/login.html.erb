<div>
	<h3 class="text-lg font-bold" >Login</h3>

		<%= form_with model: @user, url: login_path, data: { turbo: false } do |form| %>
		<div class="mt-4 space-y-6">
			<div>
			<%= form.label :email %>
			<%= form.text_field :email, class: "input-field", placeholder: "Enter email" %>
			</div>
			<div>
			<%= form.label :password %>
			<%= form.password_field :password, class: "input-field", placeholder: "Enter password" %>
			</div>
			 
			 <%= form.submit  "Login" , class: "btn-primary" %>
		</div>
		<% end %>
</div>